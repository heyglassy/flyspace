{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "isolatedModules": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "sourceMap": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react-jsx",
    },
    "exclude": [
        "node_modules"
    ]
}